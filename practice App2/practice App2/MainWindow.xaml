<Window x:Class="practice_App2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practice_App2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox FontSize="30" Name="MyTextBox" Height="50" Width="100" Margin="50" Text="{Binding ElementName=MySlider, Path=Value, Mode=TwoWay}"></TextBox>
        <Slider x:Name="MySlider" Width="500" Minimum="0" Maximum="100" IsSnapToTickEnabled="True"></Slider>
    </StackPanel>
</Window>
